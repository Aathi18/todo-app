{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "./src", // Source files will be in 'src'
    "outDir": "./dist", // Compiled JS files will go to 'dist'
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"], // Include all files in 'src'
  "exclude": ["node_modules", "**/*.spec.ts"]
}